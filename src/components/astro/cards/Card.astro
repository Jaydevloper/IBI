---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div"> & {
  className?: string;
  title?: string;
};
const { className = "", title = "", ...props } = Astro.props;
if (!Astro.slots.has("default")) {
  throw new Error("Default slot is required!");
}
---

<Fragment>
  <div
    class={"w-full max-w-xl bg-gray-800 text-white p-6 rounded-lg " + className}
    {...props}
  >
    {title ? <h2 class="font-bold text-2xl">{title}</h2> : null}
    <slot />
  </div>
</Fragment>
<Fragment>
  <style>
    {`
      .card {
        background-color: #1f2937;
        color: #ffffff;
        padding: 1.5rem;
        border-radius: 0.5rem;
      }
    `}
  </style>