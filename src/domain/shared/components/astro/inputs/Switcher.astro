---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"input"> & {
  id?: string;
  className?: string;
};
const randomUUId = crypto.randomUUID();
const {
  id = "default-switcher-" + randomUUId,
  className = "",
  ...props
} = Astro.props;
---

<Fragment>
  <label
    for={id}
    class={"flex items-center justify-between w-full max-w-24 bg-gray-300 rounded-full p-1 cursor-pointer has-checked:bg-gray-800 transition-colors duration-200 " +
      className}
  >
    <input type="checkbox" id={id} class="peer hidden" {...props} />
    <span
      class={`w-10 h-10 bg-white rounded-full shadow-md transform transition-transform duration-300 peer-checked:translate-x-12`}
    >
    </span>
  </label>
</Fragment>
